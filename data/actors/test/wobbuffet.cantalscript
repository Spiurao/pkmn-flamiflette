constant PARAMETER_LOOK = "look";
constant PARAMETER_WALK = "walk";

event loop()
{
    //Look at the character if enabled
    //in the event parameters
    if (isParameterTrue("look"))
    {
        turnToFaceCharacter();
        wait(500);
    }
}

event actionPressed()
{
    //Walk 4 tiles up and 3 tiles
    //left if enabled in the event
    //parameters
    if (isParameterTrue("walk"))
    {
        walk(UP, 4);
        walk(LEFT, 3);
        setParameter("look", true);
        setParameter("walk", false);
    }
}