constant PARAMETER_LOOK = "look";
constant PARAMETER_WALK = "walk";

message testMessage()
{
    print("Received test message");
}

event loop()
{
    //Look at the character if enabled
    //in the event parameters
    if (parameters[PARAMETER_LOOK])
    {
        turnToFaceCharacter();
        wait(500);
    }
}

event actionPressed()
{
    //Walk 4 tiles up and 3 tiles
    //left if enabled in the event
    //parameters
    if (parameters[PARAMETER_WALK])
    {
        walk(UP, 4);
        walk(LEFT, 3);
        parameters[PARAMETER_LOOK] = true;
        parameters[PARAMETER_WALK] = false;
    }
}